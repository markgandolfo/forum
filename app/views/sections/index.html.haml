- @sections.each do |section|
  - if render_category?(section)
    .section
      .header.row
        .col-xs-7.col-sm-7.col-md-6.col-md-offset-1.col-lg-6.col-lg-offset-1= section.category
        .hidden-xs.col-sm-2.col-md-2.col-lg-2 Threads/Posts
        .hidden-xs.col-sm-3.col-md-3.col-lg-3 Last Post
      .body.row
        = render partial: 'section', locals: { section: section }
  - else
    .section
      .body.row
        = render partial: 'section', locals: { section: section }
%hr
