.post.box.first
  .head.row
    .col-xs-12
      .pull-left= reply.title
      .pull-right= reply.created_at
  .main.row
    .col-xs-12
      .body-container
        .col-xs-3
          .offset-column
            .col-xs-12
              - if reply.user
                = reply.user.email
            .visible-sm.col-xs-12
              - if reply.user
                = reply.user.created_at
        .col-xs-12.col-sm-9
          .content
            = reply.body
