%p#notice= notice

.post.box.first
  .head.row
    .col-xs-12
      = @post.title
      .pull-right
        = @post.created_at
  .main.row
    .container.col-xs-4
      .content
        = @post.user.email
        = @post.user.created_at
    .body-container.col-xs-8
      .content
        = @post.body

.replies
  = render partial: 'replies/reply', collection: @replies

= paginate @replies

= link_to new_post_reply_path(@post), class:'btn btn-default btn-blue' do
  %span.glyphicon.glyphicon-plus
  Add a Reply
